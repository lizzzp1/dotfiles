[core]
  editor = nvim
  fsmonitor = true
  untrackedCache = true
[column]
  ui = auto
[alias]
  co = checkout
  gs = status
  gp = pull
  gp = push
[diff]
  ; tool = kitty
  ; guitool = kitty.gui
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[difftool]
  prompt = false
  trustExitCode = true
[difftool "kitty"]
  cmd = kitten diff $LOCAL $REMOTE
[difftool "kitty.gui"]
  cmd = kitten diff $LOCAL $REMOTE
[init]
  defaultBranch = main
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[pull]
  rebase = true
[user]
  name = liz
  email = lizpny@pm.me
[merge]
  conflictstyle = zdiff3
