"languageserver": {
  "ruby-lsp": {
    "command": "ruby-lsp",
    "initializationOptions": {
      "experimentalFeaturesEnabled": false,
      "enabledFeatures": [
        "codeActions",
        "diagnostics",
        "documentHighlights",
        "documentLink",
        "documentSymbols",
        "foldingRanges",
        "formatting",
				"hover.autoHover": true,
        "inlayHint",
        "onTypeFormatting",
        "selectionRanges",
        "semanticHighlighting",
        "completion"
      ],
      "formatter": "auto"
    },
    "filetypes": ["ruby"]
  }
}
